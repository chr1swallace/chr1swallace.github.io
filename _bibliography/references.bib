}

@article{2014_diabetologia_downes,
  title = {Plasma Concentrations of Soluble {{IL}}-2 Receptor ({{CD25}}) Are Increased in Type 1 Diabetes and Associated with Reduced {{C}}-Peptide Levels in Young Patients.},
  author = {Downes, Kate and Marcovecchio, M. Loredana and Clarke, Pamela and Cooper, Jason D and Ferreira, Ricardo C and Howson, Joanna M M and Jolley, Jennifer and Nutland, Sarah and Stevens, Helen E and Walker, Neil M and Wallace, C and Dunger, David B and Todd, John A},
  year = {2014},
