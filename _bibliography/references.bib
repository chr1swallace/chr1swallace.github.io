@article{Swafford2011-ku,
  title = {An {{Allele}} of {{IKZF1}} ({{Ikaros}}) {{Conferring Susceptibility}} to {{Childhood Acute Lymphoblastic Leukemia Protects Against Type}} 1 {{Diabetes}}},
  author = {Swafford, Austin D-E and Howson, Joanna M M and Davison, Lucy J and Wallace, Chris and Smyth, Deborah J and Schuilenburg, Helen and {Maisuria-Armer}, Meeta and Mistry, Trupti and Lenardo, Michael J and Todd, John A},
