@article{newhouse05,
  title = {Haplotypes of the {{WNK1}} Gene Associate with Blood Pressure Variation in a Severely Hypertensive Population from the {{British Genetics}} of {{Hypertension}} Study.},
  author = {Newhouse, Stephen J and Wallace, C and Dobson, Richard and Mein, Charles and Pembroke, Janine and Farrall, Martin and Clayton, David and Brown, Morris and Samani, Nilesh and Dominiczak, Anna and Connell, John M and Webster, John and Lathrop, G. Mark and Caulfield, Mark and Munroe, Patricia B},
