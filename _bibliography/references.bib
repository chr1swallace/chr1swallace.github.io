@article{Downes2010-qi,
  title = {Reduced {{Expression}} of {{IFIH1 Is Protective}} for {{Type}} 1 {{Diabetes}}},
  author = {Downes, Kate and Pekalski, Marcin and Angus, Karen L and Hardy, Matthew and Nutland, Sarah and Smyth, Deborah J and Walker, Neil M and Wallace, Chris and Todd, John A},
  editor = {{von Herrath}, Matthias G Editor},
