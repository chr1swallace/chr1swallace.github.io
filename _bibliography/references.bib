  author = {Ferreira, Ricardo C. and Guo, Hui and Coulson, Richard M R. and Smyth, Deborah J. and Pekalski, Marcin L. and Burren, Oliver S. and Cutler, Antony J. and Doecke, James D. and Flint, Shaun and McKinney, Eoin F. and Lyons, Paul A. and Smith, Kenneth G C. and Achenbach, Peter and Beyerlein, Andreas and Dunger, David B. and Wicker, Linda S. and {Todd J} and {*Bonifacio E} and *Wallace, C and {*Ziegler G}},
  year = {2014},
