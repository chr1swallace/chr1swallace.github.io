@article{2018_libertini,
  title = {{{DNA}} Methylation Oscillation Defines Classes of Enhancers},
  author = {Libertini, Emanuele and Hamoudi, Rifat and Heath, Simon and Lancashire, Lee and Garcia, Arcadio Rubio and Grassi, Luigi and Downes, Kate and Ouwehand, Willem and Javierre, Biola-Maria and Cairns, Jonathan and Wingett, Steven and Paul, Dirk and Gut, Marta and Gut, Ivo and Martens, Joost and Ivliev, Alexandr and Stunnenberg, Hendrik and Frontini, Mattia and Spivakov, Mikhail and Fraser, Peter and Cutler, Anthony and Wallace, Chris and Beck, Stephan},
